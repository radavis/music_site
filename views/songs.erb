<h1>Songs</h1>

<table class="songs">
  <tr>
    <th>Track #</th>
    <th>Title</th>
    <th>Artist</th>
    <th>Album</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Length</th>
  </tr>

  <% @songs.each do |song| %>
  <tr>
    <td>
      <%= song['track'] %>
    </td>
    <td>
      <%= song['title'] %>
    </td>
    <td>
      <%= song['artist'] %>
    </td>
    <td>
      <%= song['album'] %>
    </td>
    <td>
      <%= song['year'] %>
    </td>
    <td>
      <%= song['genre'] %>
    </td>
    <td>
      <%= seconds_to_time(song['length']) %>
    </td>
  </tr>
  <% end %>
</table>

<br/>

<% if @page > 1 %>
  <a href="/songs?page=<%= @page - 1%>">Previous</a> |
<% end %>

<a href="/songs?page=<%= @page + 1%>">Next</a>
